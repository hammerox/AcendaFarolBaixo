<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:title="Alarm settings">

        <PreferenceScreen
            android:title="Test Alarm"
            android:summary="Click here to trigger the alarm" >
            <intent android:action="com.hammerox.android.ALARM_SCREEN" />
        </PreferenceScreen>

        <CheckBoxPreference
            android:key="@string/pref_alarm_vibrate_key"
            android:title="Vibrate"
            android:summary="When triggered, device will vibrate"
            android:defaultValue="true" />

        <ListPreference
            android:key="@string/pref_alarm_type_key"
            android:title="Alarm Type"
            android:summary="Choose between voice or alarm sound"
            android:entries="@array/alarm_type"
            android:entryValues="@array/alarm_type_values"
            android:defaultValue="2" />

        <RingtonePreference
            android:key="@string/pref_alarm_sound_key"
            android:title="Alarm Sound"
            android:ringtoneType="alarm"
            android:summary="Change the alarm sound"
            android:showDefault="true" />

        <EditTextPreference
            android:key="@string/pref_alarm_speech_key"
            android:title="Voice Speech"
            android:summary="Change what the system speaks"
            android:dialogTitle="EditText Dialog"
            android:defaultValue="@string/pref_speech_default"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Others">

        <CheckBoxPreference
            android:key="@string/pref_boot_key"
            android:title="@string/pref_boot_title"
            android:summary="@string/pref_boot_summary"
            android:defaultValue="true" />
    </PreferenceCategory>


</PreferenceScreen>