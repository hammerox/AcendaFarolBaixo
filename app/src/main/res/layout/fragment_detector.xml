<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/primary_light"
    tools:context="com.hammerox.android.acendaofarolbaixo.DetectorFragment">

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/detector_ripple"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:rb_color="@color/accent"
        app:rb_radius="50dp"
        app:rb_rippleAmount="4"
        app:rb_duration="2000"
        app:rb_scale="2">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/detector_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:fb_iconResource="@drawable/ic_notifications_white_48dp"
            app:fb_radius="50dp"
            app:fb_defaultColor="@color/accent"
            app:fb_focusColor="@color/accent_dark"
            android:layout_centerInParent="true"/>
    </com.skyfishjy.library.RippleBackground>
</LinearLayout>
